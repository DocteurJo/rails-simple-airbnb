<h1>All our flats</h1>

<div class="container">

  <% @flats.each_slice(4) do |flats| %>
  <div class="row">
    <% flats.each do |flat| %>
    <div class="card col">
      <div class="card-body">
        <h5 class="card-title"> <%= flat.name %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
        <p class="card-text"><%= flat.description %></p>
        <%= link_to 'More info', flat_path(flat) %>
      </div>
    </div>
    <% end %>
  </div>
  <% end %>
</div>
